<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="10dp">

        <ImageView
            android:id="@+id/time_read_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_time_read_icon"
            android:maxHeight="25dp"
            android:maxWidth="25dp"
            android:padding="0.5dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time_read_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="top|start"
            android:lineSpacingExtra="2dp"
            android:maxLines="3"
            android:textColor="@color/gank_data_title"
            android:textSize="@dimen/gank_data_title"
            app:layout_constraintEnd_toStartOf="@+id/time_read_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Space
            android:id="@+id/time_read_space"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            app:layout_constraintEnd_toStartOf="@+id/time_read_icon"
            app:layout_constraintStart_toStartOf="@+id/time_read_title"
            app:layout_constraintTop_toBottomOf="@+id/time_read_title" />


        <TextView
            android:id="@+id/time_read_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gank_data_desc"
            android:textSize="@dimen/gank_data_desc"
            android:textStyle="normal"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="@+id/time_read_space"
            app:layout_constraintTop_toBottomOf="@+id/time_read_space" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>