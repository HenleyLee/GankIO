<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gank_daily_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="@color/gank_daily_title"
            android:textSize="@dimen/gank_daily_title"
            android:textStyle="bold" />

        <View
            android:id="@+id/gank_daily_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.7"
            android:background="@color/gank_divider_line" />

        <LinearLayout
            android:id="@+id/gank_daily_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</android.support.v7.widget.CardView>