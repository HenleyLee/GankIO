<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AboutItemCard">

    <ImageView
        android:id="@+id/developer_header"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="#000000" />

    <Space
        android:id="@+id/developer_space"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/developer_header"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/developer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/developer_header"
        android:layout_toEndOf="@id/developer_header"
        android:layout_toRightOf="@id/developer_header"
        android:gravity="center"
        android:textColor="@color/about_title_color"
        app:layout_constraintStart_toEndOf="@+id/developer_space"
        app:layout_constraintTop_toTopOf="@+id/developer_header"
        tools:text="Author" />

    <TextView
        android:id="@+id/developer_duty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/about_desc_color"
        app:layout_constraintBottom_toBottomOf="@+id/developer_header"
        app:layout_constraintStart_toStartOf="@+id/developer_name"
        app:layout_constraintTop_toBottomOf="@+id/developer_name"
        tools:text="Developer" />

</androidx.constraintlayout.widget.ConstraintLayout>
